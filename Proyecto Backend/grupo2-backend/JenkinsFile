pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Código descargado desde GitHub'
            }
        }

        stage('Build') {
            steps {
                echo 'Aquí iría el build de la página (si existiera)'
            }
        }

        stage('Pruebas') {
            steps {
                echo 'Aquí se podrían ejecutar pruebas automatizadas'
            }
        }
    }
}
